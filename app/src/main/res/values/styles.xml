<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/BlueSecondaryLight</item>
        <item name="colorPrimaryDark">@color/BlueSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MainSpacingFormat" >
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>

    </style>

    <style name="MainSpacingFormat.Horizontal" >
        <item name="android:layout_marginStart">21dp</item>
        <item name="android:layout_marginEnd">21dp</item>

    </style>

    <style name="LoginFormEditText" parent="MainSpacingFormat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:ems">10</item>
    </style>

</resources>
