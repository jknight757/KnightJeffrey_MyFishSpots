<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CatchDetailFragment"
    android:background="@color/GreyishBlue2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/catch_img_dtl"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

        <TextView
            android:id="@+id/date_lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11/23/20"
            android:textSize="20sp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/species_lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Species"
            android:textSize="20sp"
            android:layout_marginStart="21dp"/>

        <TextView
            android:id="@+id/size_lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="27 inches  3 lbs"
            android:textSize="20sp"
            android:layout_marginStart="21dp"/>

        <TextView
            android:id="@+id/lure_lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lure"
            android:textSize="20sp"
            android:layout_marginStart="21dp"/>

        <TextView
            android:id="@+id/tide_lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tide"
            android:textSize="20sp"
            android:layout_marginStart="21dp"/>

        <TextView
            android:id="@+id/method_lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Method"
            android:textSize="20sp"
            android:layout_marginStart="21dp"/>

        <Button
            android:id="@+id/delete_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textSize="20sp"
            android:layout_marginStart="21dp"
            android:layout_marginEnd="21dp"
            android:layout_marginTop="50dp"/>
    </LinearLayout>


</FrameLayout>